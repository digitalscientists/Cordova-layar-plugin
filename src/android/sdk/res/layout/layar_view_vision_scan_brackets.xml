<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="@drawable/vision_brackets"
    android:gravity="center"
    android:onClick="scan"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/scan_title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:shadowColor="@android:color/black"
        android:shadowRadius="5"
        android:text="@string/vision_scan_title"
        android:textColor="@android:color/white"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/scan_hint"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:shadowColor="@android:color/black"
        android:shadowRadius="5"
        android:text="@string/vision_scan_hint"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/scan_image" />

    <TextView
        android:id="@+id/scan_button"
        style="@style/CustomHomeLabel"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="#80d4d4d4"
        android:gravity="center"
        android:minWidth="150dip"
        android:singleLine="true"
        android:text="@string/action_scan" />

</LinearLayout>