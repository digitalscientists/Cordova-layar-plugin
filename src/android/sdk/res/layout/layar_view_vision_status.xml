<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="128dp"
    android:layout_height="wrap_content"
    android:background="@drawable/vision_status_background"
    android:layout_gravity="center"
    android:padding="0dp" >

    <ImageView
        android:id="@+id/status_step_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:src="@drawable/vision_status_inactive" />

    <ImageView
        android:id="@+id/status_step_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="2dp"
        android:src="@drawable/vision_status_inactive" />

    <ImageView
        android:id="@+id/status_step_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:src="@drawable/vision_status_inactive_ok" />

    <ImageView
        android:id="@+id/status_transition_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/status_step_2"
        android:background="@drawable/vision_status_transition_background"
        android:src="@drawable/vision_status_transition_animation"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/status_transition_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/status_step_2"
        android:background="@drawable/vision_status_transition_background"
        android:visibility="gone" />

</RelativeLayout>
</FrameLayout>